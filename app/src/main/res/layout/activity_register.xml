<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_nome"
        android:layout_width="165dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/calendar"
        app:layout_constraintStart_toStartOf="@+id/calendar"
        app:layout_constraintTop_toTopOf="@+id/txt_cognome" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="165dp"
        android:layout_height="19dp"
        android:text="Nome"
        app:layout_constraintBottom_toTopOf="@+id/txt_nome"
        app:layout_constraintStart_toStartOf="@+id/txt_nome" />

    <EditText
        android:id="@+id/txt_cognome"
        android:layout_width="166dp"
        android:layout_height="46dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/calendar"
        app:layout_constraintEnd_toEndOf="@+id/calendar" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="166dp"
        android:layout_height="19dp"
        android:text="Cognome"
        app:layout_constraintBottom_toTopOf="@+id/txt_cognome"
        app:layout_constraintStart_toStartOf="@+id/txt_cognome" />

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="378dp"
        android:layout_height="322dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_register"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Data di Nascita"
        app:layout_constraintBottom_toTopOf="@+id/calendar"
        app:layout_constraintStart_toStartOf="@+id/calendar" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/calendar"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="174dp"
        android:layout_height="21dp"
        android:text="User"
        app:layout_constraintBottom_toTopOf="@+id/txt_user"
        app:layout_constraintStart_toStartOf="@+id/txt_user" />

    <EditText
        android:id="@+id/txt_user"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/calendar"
        app:layout_constraintTop_toBottomOf="@+id/calendar" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="173dp"
        android:layout_height="21dp"
        android:text="Password"
        app:layout_constraintBottom_toTopOf="@+id/txt_password"
        app:layout_constraintEnd_toEndOf="@+id/txt_password"
        app:layout_constraintStart_toStartOf="@+id/txt_password" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="267dp"
        android:layout_height="43dp"
        android:layout_marginBottom="64dp"
        android:baselineAligned="false"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_password"
        app:layout_constraintStart_toStartOf="@+id/txt_user" />

</androidx.constraintlayout.widget.ConstraintLayout>